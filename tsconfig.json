{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": [
      "."
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./tests",
    "./client",
    "./scripts"
  ]
}
